@{
    /// <summary>
    /// Specify resource inclusions here
    /// 
    /// Override in child theme if you want to include different resources.
    /// To just add to this set, override AdditionalResources.cshtml
    /// </summary>
}

@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;

@{
    var theme = WorkContext.CurrentTheme;
    /* Links
    ***************************************************************/
    RegisterLink(new LinkEntry { Type = "image/x-icon", Rel = "shortcut icon", Href = Url.Content(theme.Location + "/" + theme.Path + "/Images/" + "favicon.ico") });
    
    @*
    Other icons could be added, e.g.:
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../Images/Touch/apple-touch-icon-144x144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../Images/Touch/apple-touch-icon-114x114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../Images/Touch/apple-touch-icon-72x72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="../Images/Touch/apple-touch-icon-57x57-precomposed.png" />
    *@
    
    
    /* Styles
    ***************************************************************/
    Style.Include("Reset.css");
    Style.Include("General.css");
    Style.Include("Forms.css");
    Style.Include("Structure.css");
    Style.Include("Main.css");
    Style.Include("Widgets.css");
    Style.Include("Pager.css");
    Style.Include("Misc.css");
    Style.Include("CSS3.css");
    Style.Include("MediaQueries.css");
    Style.Include("Additions.css");
    Style.Include("Site.css");
    
    /* Scripts
    ***************************************************************/
    Script.Include("//html5shiv.googlecode.com/svn/trunk/html5.js").AtHead().UseCondition("if lt IE 9");
    Script.Include("Respond.min.js").AtHead(); /* Polyfill for media queries before IE9 */
    Script.Require("jQuery").AtHead();
    Script.Include("ResponsiveChanges.js").AtHead(); /* For responsive navigation/layout changes in mobile/tablet layouts. Requires jQuery */

    Display.AdditionalResources();
}